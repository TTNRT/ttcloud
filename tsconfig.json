{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "types": [
      "@types/node",
      "@types/bcrypt",
      "express",
      "@types/passport-local",
      "@types/passport",
      "@types/connect-flash"
    ],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "nodenext",
  }
}
